<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_s"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.animalia.quiz.QuestionActivity_" >

    <ImageView
        android:id="@+id/imageViewModuleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/mammalsquiz" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" 
        android:background="@drawable/module_layout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Time remainging: "
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="23"
            android:textColor="#fff"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewQuestionNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="Question 1/5:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Do you know?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/option_button"
            android:onClick="chooseAnswer"
            android:tag="1"
            android:text="Answer 1"
            android:textColor="#fff" />

        <Button
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/option_button"
            android:onClick="chooseAnswer"
            android:tag="2"
            android:text="Answer 2"
            android:textColor="#fff" />

        <Button
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/option_button"
            android:onClick="chooseAnswer"
            android:tag="3"
            android:text="Answer 3"
            android:textColor="#fff" />

        <Button
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/option_button"
            android:onClick="chooseAnswer"
            android:tag="4"
            android:text="Answer 4"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>